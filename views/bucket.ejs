        </form>
      </div>
      <!-- Modal body end -->

      <!-- Modal footer start -->
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Create Bucket</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
      <!-- Modal footer end -->
    </div>
  </div>
</div>

